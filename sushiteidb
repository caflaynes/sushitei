
-- Create table for menus
CREATE TABLE menus (
    menu_id int PRIMARY KEY,
    menu_name varchar(20) NOT NULL,
    description text,
    is_active boolean DEFAULT TRUE -- Indicates if the menu is currently active
);


-- Insert values for menus
